<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/bootstrap/css/bootstrap.min.css' />
</head>
<body>

    <main class="menu">

        <table class="table table-striped table-bordered table-hover table-sm">
            <thead>
                <tr>
                    <td>Questão</td>
                    <td>A</td>
                    <td>B</td>
                    <td>C</td>
                    <td>D</td>
                    <td>Alterar</td>
                    <td>Excluir</td>
                </tr>
            </thead>
      
            <% for(i = 0; i<questao.length; i++) {%>
              <tr>
                  <td><%=questao[i].question %></td>
                  <td><%=questao[i].a %></td>
                  <td><%=questao[i].b %></td>
                  <td><%=questao[i].c %></td>
                  <td><%=questao[i].d %></td>
                  <td><a href="/alterar?question=<%=questao[i].question %>" class="btn btn-warning">Alterar</a></td>
                  <td><a href="#" onclick="Excluir('<%=questao[i].question %>')" class="btn btn-danger">Excluir</a></td>
              </tr>
            <% } %>
        </table>
        
        <a href="/responder?i=0" class="btn btn-success">Responder</a>
        <section class="add_find">
            <form action="/cadastrar-questao" method="post" class="new-question" onsubmit="return Validacao()">
        
                <div class="new-question__ask">
                    <label for="question">Q</label> 
                    <input type="text" name="question" id="question-ask" placeholder="Digite aqui o enunciado">
                </div>
          
                <div class="new-question__option">
                    <label for="question">a</label> 
                    <input type="text" name="a" id="question-a">
                </div>
                <div class="new-question__option">
                    <label for="question">b</label> 
                    <input type="text" name="b" id="question-b">
                </div>
                <div class="new-question__option">
                    <label for="question">c</label> 
                    <input type="text" name="c" id="question-c">
                </div>
                <div class="new-question__option">
                    <label for="question">d</label> 
                    <input type="text" name="d" id="question-d">
                </div>
          
                <div class="new-question__option">
                    <label for="question">R</label>
                    <input type="text" name="r" id="question-correct" placeholder="escreva 'a, b, c ou d'">
                </div>
          
          
                <input type="submit" id="add-question" value="Adicionar" class="btn btn-success"/>
            </form>
          
            <form action="/buscar" method="post" class="buscar">
          
              <div class="new-question__option_buscar">
                  <label for="question">Enunciado</label> 
                  <input type="text" name="question" id="question-a" >
              </div>
          
              <input type="submit" id="add-question" value="Buscar" class="btn btn-success"/>
              <input type="submit" id="add-question" value="Todas as Questões" class="btn btn-success"/>
            </form>
          
        </section>


    </main>   
  
    <script type="text/javascript" src="./javascripts/script.js"></script>
</body>
</html>
